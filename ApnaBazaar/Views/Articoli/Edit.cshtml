@model Articolo

<form method="post" asp-action="Edit">
    <input type="hidden" name="IdA" value="@Model.IdA" />

    <div class=" border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Modifica Prodotto</h2>
            <hr/>

        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Descrizione"></label>
            <input asp-for="Descrizione" class="form-control" />
            <span asp-validation-for="Descrizione" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Prezzo"></label>
            <input asp-for="Prezzo" class="form-control" />
            <span asp-validation-for="Prezzo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Quantita"></label>
            <input asp-for="Quantita" class="form-control" />
            <span asp-validation-for="Quantita" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImmagineUpload1" class="form-label">Immagine 1</label>
            <input asp-for="ImmagineUpload1" type="file" class="form-control" />
            <span asp-validation-for="ImmagineUpload1" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImmagineUpload2" class="form-label">Immagine 2</label>
            <input asp-for="ImmagineUpload2" type="file" class="form-control" />
            <span as-validation-for="ImmagineUpload2" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImmagineUpload3" class="form-label">Immagine 3</label>
            <input asp-for="ImmagineUpload3" type="file" class="form-control" />
            <span asp-validation-for="ImmagineUpload3" class="text-danger"></span>
        </div>
       <button type="submit" class="btn btn-primary" style="width:150px">Modifica</button>

       <a asp-controller="Articoli" asp-action="Index"  class="btn btn-secondary" style="width:150px" >Back to List </a>
      

    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
